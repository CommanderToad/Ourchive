<Alloy>
	<View id="addEvent">
		<View id="addEventView">
			<TextField class="singleLineText" hintText="Title"></TextField>
			<TextField class="singleLineText" hintText="Location"></TextField>
			<View class="textAreaContainer">
				<TextArea id="eventDescription"></TextArea>
				<Label id="textAreaHint">Test Hint</Label>
			</View>
			<View id="tagLabel">
				<Label>Tags</Label>
				<Label id="tagDesc">For all moments in this event</Label>
			</View>
			<TextField class="singleLineText"></TextField>
			<View class="tagRow">
				<Button class="tagYellow"></Button>
				<Button class="tagYellow"></Button>
				<Button class="tagGray"></Button>
			</View>
			<View class="btnRow">
				<ImageView class="leftBtn" image = "images/icon-check.png"></ImageView>
				<ImageView class="rightBtn" image = "images/icon-x.png"></ImageView>
			</View>
		</View>
	</View>
</Alloy>