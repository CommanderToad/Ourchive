<Alloy>
	<View id="addVideo">
		<View id="addVideoView">
			<View id="video"></View>
			<View id="videoEdit">
				<TextField class="singleLineText" hintText="Name"></TextField>
				<TextField class="singleLineText" hintText="Location"></TextField>
				<ImageView class="chatBubble" image="images/icon-chatbubble.png"></ImageView>
			</View>
		</View>
		<View class="textAreaContainer">
			<TextArea id="videoDesc"></TextArea>
			<Label id="textAreaHint">Description</Label>
		</View>		<View class="tagRow">
			<Button class="tagYellow"></Button>
			<Button class="tagYellow"></Button>
			<Button class="tagGray"></Button>
		</View>
		<View class="btnRow">
			<ImageView class="leftBtn" image = "images/icon-check.png"></ImageView>
			<ImageView class="rightBtn" image = "images/icon-x.png"></ImageView>
		</View>
	</View>
</Alloy>