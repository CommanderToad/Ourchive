<Alloy>
	<View id="homeView">
		<View id="addView">
			<View class="buttonRow" id="row1">
				<ImageView class="leftBtn" image="images/icon-photos.png" id="photoSelection"></ImageView>
				<ImageView class="rightBtn" image="images/icon-video.png" id="addVideo"></ImageView>
			</View>
			<View class="buttonRow" id="row2">
				<ImageView class="leftBtn" image="images/icon-text.png" id="addText"></ImageView>
				<ImageView class="rightBtn" image="images/icon-audio.png" id="addAudio"></ImageView>
			</View>
			<View class="buttonRow">
				<ImageView id="myOurchiveBtn" onClick="myOurchive" image="images/icon-mystream.png"></ImageView>
				<Label id="streamFollowers">43 members</Label>
			</View>
		</View>
		<View id="bottomTable">
			<View id="tableHeader">
				<Label id="titleNewEvent">Events</Label>
				<Button id="addEvent" id="addEvent">New</Button>
				<ImageView class="eventIcon" image="images/menu/add.png"></ImageView>
			</View>
			<TableView id="recentEvents">
				<TableViewRow class="bottomTableRow">
					<Label class="tableTitle">European Vacation</Label>
					<Label class="titleTime">3d 5h</Label>
					<Button class="changeEvent">Stop</Button>
					<ImageView class="eventIcon" image="images/menu/close.png"></ImageView>
				</TableViewRow>
				<TableViewRow class="bottomTableRow">
					<Label class="tableTitle">Jeff's Wedding</Label>
					<Label class="titleTime">3h 26m</Label>
					<Button class="changeEvent">Start</Button>
					<ImageView class="eventIcon" image="images/menu/close.png"></ImageView>
				</TableViewRow>
				<TableViewRow class="bottomTableRow">
					<Label class="tableTitle">Koles's Bar Mitzvah</Label>
					<Label class="titleTime">2h 16m</Label>
					<Button class="changeEvent">Start</Button>
					<ImageView class="eventIcon" image="images/menu/close.png"></ImageView>
				</TableViewRow>
			</TableView>
		</View>
	</View>
</Alloy>
