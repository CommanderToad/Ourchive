<Alloy>
	<View id="addAudio">
		<View id="audioPlayback">
			<ImageView id="skipBackward" image = "images/record-skipBackward.png"></ImageView>
			<ImageView id="play" image = "images/record-play.png" onClick="playRecording"></ImageView>
			<ImageView id="skipForward" image = "images/record-skipForward.png"></ImageView>
		</View>
		<View id="recordInfo">
			<Label id ="durationLabel"></Label>
		</View>
		<View id="bottomBar">
			<ImageView id="record" image = "images/record-start.png" onClick="record"></ImageView>
		</View>
	</View>
</Alloy>
